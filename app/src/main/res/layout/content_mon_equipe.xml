<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".controller.MonEquipeActivity"
    android:id="@+id/monEquipe_relativeLayout">

    <TextView
        android:id="@+id/monEquipe_nomPokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="nom"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/monEquipe_niveauPkm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/monEquipe_nomPokemon"
        android:text="niveau"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_dark_material_dark" />

    <TextView
        android:id="@+id/monEquipe_pseudoPkm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monEquipe_nomPokemon"
        android:gravity="center"
        android:text="Pseudo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_dark_material_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/monEquipe_expPkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exp : "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/monEquipe_atkPkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monEquipe_expPkm"
            android:text="atk : "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/monEquipe_defPkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monEquipe_atkPkm"
            android:text="def : "
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
</RelativeLayout>
